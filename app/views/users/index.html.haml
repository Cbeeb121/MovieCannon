= content_for :background_image, '12angry.jpg'
.text-center
  %h2.white Users
  %h5 Select a user to see their reviews
  %br
  - @users.order(email: :asc).each do |user|
    .film-edit-container
      - if current_user == user
        = link_to "You", user_path(user), class: "btn btn-lg btn-secondary"
      - else
        = link_to "#{user.email}", user_path(user), class: "btn btn-lg btn-secondary"
