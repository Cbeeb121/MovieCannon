!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = favicon_link_tag 'favicon.ico'
    %title MovieCannon
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      = image_tag "M.png", class: 'd-inline-block align-top', height: "50", width: "50"
      %a.navbar-brand{:href => "#"} MovieCannon
      %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNav", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        %ul.navbar-nav
          %li.nav-item
            = link_to root_path, class: "nav-link" do
              Home
          %li.nav-item
            = link_to destroy_admin_session_path, class: "nav-link", method: :delete do
              Logout
          %li.nav-item
            = link_to trestle_path, class: "nav-link" do
              Admin
          -# %li.nav-item
          -# = link_to root_path, class: "nav-link" do
          -#   - icon: "fab fa-github"
    = yield
