!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %icon{:href => "favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
    %title MovieCannon
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      %img.d-inline-block.align-top{:height => "50", :src => "assets/M.png", :width => "50"}
      %a.navbar-brand{:href => "#"} MovieCannon
      %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNav", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        %ul.navbar-nav
          %li.nav-item.active
          = link_to root_path, class: "nav-link" do
            Home
            %span.sr-only (current)
          %li.nav-item
          = link_to destroy_admin_session_path, class: "nav-link", method: :delete do
            Logout
          %li.nav-item
          = link_to trestle_path, class: "nav-link" do
            Admin
          -# %li.nav-item
          -# = link_to root_path, class: "nav-link" do
          -#   - icon: "fab fa-github"
    = yield
